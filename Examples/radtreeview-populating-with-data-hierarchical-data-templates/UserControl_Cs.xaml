        <telerik:RadTreeView.ItemTemplate>

            <HierarchicalDataTemplate ItemsSource="{Binding RelatedItems}"
     ItemContainerStyle="{StaticResource greenStyle}">
                <TextBlock Text="{Binding Title}" />
            </HierarchicalDataTemplate>

        </telerik:RadTreeView.ItemTemplate>
    </telerik:RadTreeView>

</Grid>
<!-- #endregion -->
</Grid>
</UserControl>
