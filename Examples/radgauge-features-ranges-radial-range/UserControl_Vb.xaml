<UserControl x:Class="Default_Vb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
            
    
<!-- #region radgauge-features-ranges-radial-range_0 -->
 <telerik:RadRadialGauge Width="220" Height="220">
            <telerik:RadialScale Name="scale" 
                                 RangeLocation="Outside"
                                 RangeOffset="-0.01"
                                 MajorTickOffset="-0.01"
                                 MiddleTickOffset="-0.01"
                                 MinorTickOffset="-0.01"
                           MajorTickUseRangeColor="True"
                           MiddleTickUseRangeColor="True"
                           MinorTickUseRangeColor="True"
                           IsInteractive="True"
                           LabelUseRangeColor="True">
                <telerik:RadialScale.Ranges>
                    <telerik:GaugeRange  Min="0" Max="20"
                                         StartWidth="0.01"
                                         EndWidth="0.01"
                                         Background="#FF1E8D00"
                                         TickBackground="#FF1E8D00"
                                         LabelForeground="#FF1E8D00"
                                         IndicatorBackground="#FF1E8D00" />
                    <telerik:GaugeRange Min="20" Max="80"
                                         StartWidth="0.01"
                                         EndWidth="0.01"
                                         Background="#FF454545"
                                         TickBackground="#FF454545"
                                         LabelForeground="#FF454545"
                                         IndicatorBackground="#FF454545" />
                    <telerik:GaugeRange Min="80" Max="100"
                                         StartWidth="0.01"
                                         EndWidth="0.01"
                                         Background="#FFE50000"
                                         TickBackground="#FFE50000"
                                         LabelForeground="#FFE50000"
                                         IndicatorBackground="#FFE50000" />
                </telerik:RadialScale.Ranges>
                <telerik:RadialScale.Indicators>
                    <telerik:Marker Name="marker" 
                                  IsAnimated="True" 
                                  Duration="0:0:4" 
                                  Value="25"
                                  UseRangeColor="True"/>
                    <telerik:Needle/>
                    <telerik:Pinpoint />
                </telerik:RadialScale.Indicators>
            </telerik:RadialScale>
        </telerik:RadRadialGauge>
<!-- #endregion -->
</Grid>
</UserControl>
