<UserControl x:Class="WpfApplication1.Default_Cs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
            
    
<!-- #region linear-scale-ranges_0 -->
<telerik:LinearScale Name="linearScale">
 <telerik:RangeList>
  <telerik:LinearRange
   Name="Yellow"
   Min="0"
   Max="100"
   StartWidth="0.02"
   EndWidth="0.1"
   Location="Inside"
   Background="Yellow"/>
 </telerik:RangeList>
</telerik:LinearScale>
<!-- #endregion -->

<!-- #region linear-scale-ranges_1 -->
<telerik:LinearScale Name="linearScale">
   <telerik:LinearScale.MajorTick>
      <telerik:MajorTickProperties UseRangeColor="True"/>
   </telerik:LinearScale.MajorTick>
   <telerik:LinearScale.MiddleTick>
      <telerik:MiddleTickProperties UseRangeColor="True"/>
   </telerik:LinearScale.MiddleTick>
   <telerik:LinearScale.MinorTick>
      <telerik:MinorTickProperties UseRangeColor="True"/>
   </telerik:LinearScale.MinorTick>
   <telerik:LinearScale.Label>
      <telerik:LabelProperties Location="Outside"
            UseRangeColor="True"/>
   </telerik:LinearScale.Label>
   <telerik:RangeList>
      <telerik:LinearRange Min="60"
           Max="100"
           Location="Inside"
           StartWidth="0"
           EndWidth="0.06"
           Background="Blue"
           BorderBrush="Yellow"
           StrokeThickness="1"
           TickBackground="Cyan"
           LabelForeground="Yellow"/>
   </telerik:RangeList>
 ...
</telerik:LinearScale>
<!-- #endregion -->
</Grid>
</UserControl>
