<UserControl x:Class="WpfApplication1.Default_Cs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
            
    
<!-- #region radwindow-using-user-control-with-radwindow_0 -->
<UserControl x:Class="RadWindowTest.DatePickerUserControl"  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:telerik="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls.Input" Background="AliceBlue" Width="200" Height="80">
 <StackPanel Background="AliceBlue">
  <TextBlock Text="Select date:" />
  <telerik:RadDatePicker x:Name="datePicker" />
  <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
    <Button x:Name="btnOK" Content="OK" Click="OnBtnOkClicked" />
    <Button x:Name="btnCancel" Content="Cancel" Click="OnBtnCancelClicked" />
  </StackPanel>
 </StackPanel>
</UserControl>
<!-- #endregion -->

<!-- #region radwindow-using-user-control-with-radwindow_3 -->
<RadWindow x:Name="window">
    <DatePickerUserControl />
</RadWindow>
<!-- #endregion -->
</Grid>
</UserControl>
